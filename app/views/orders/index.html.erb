<h1>Orders</h1>

<%= paginate @orders %>

<table>
  <thead>
    <tr>
      <th>Cashier name</th>
      <th>Date</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.cashier.present? ? order.cashier.first_name : 'Deleted cashier'  %></td>
        <td><%= order.date %></td>
        <td><%= order.amount %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New order', new_order_path, class: 'btn btn-primary' %>